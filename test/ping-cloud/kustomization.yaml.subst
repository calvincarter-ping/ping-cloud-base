kind: Kustomization
apiVersion: kustomize.config.k8s.io/v1beta1

resources:
- ../../k8s-configs/ping-cloud/test/${CLUSTER_TYPE}
- patches/service/pingdirectory.yaml

configMapGenerator:
# Pingaccess
- name: pingaccess-environment-variables
  behavior: merge
  envs:
  - env_vars
  - pingaccess/env_vars
# Pingfederate
- name: pingfederate-environment-variables
  behavior: merge
  envs:
  - env_vars
  - pingfederate/env_vars
# Pingdirectory
- name: pingdirectory-environment-variables
  behavior: merge
  envs:
  - env_vars
  - pingdirectory/env_vars

patchesJson6902:
# pingdata
- path: patches/ingress/pingdataconsole.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingdataconsole-ingress

# pingfederate runtime
- path: patches/ingress/pingfederate.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingfederate-ingress

# pingaccess runtime
- path: patches/ingress/pingaccess.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingaccess-ingress

# pingaccess agent
- path: patches/ingress/pingaccess-agent.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingaccess-agent-ingress

${PF_PA_ADMIN_INGRESS_PATCHES}

patchesStrategicMerge:
- patches/secret/devops-secret.yaml

- |-
  apiVersion: v1
  kind: Service
  metadata:
    name: pingdirectory-admin
  $patch: delete