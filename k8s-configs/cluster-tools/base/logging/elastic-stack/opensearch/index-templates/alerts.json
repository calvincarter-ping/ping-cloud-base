{
  "index_patterns": [
    "alerts-*"
  ],
  "template": {
    "settings": {
      "index.number_of_shards": "3",
      "index.number_of_replicas": "0",
      "index.refresh_interval": "5s",
      "index": {
        "routing": {
          "allocation": {
            "require": {
              "temp": "hot"
            }
          }
        },
        "plugins": {
          "index_state_management": {
            "rollover_alias": "alerts"
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "sns_message": {
          "type": "text"
        },
        "sns_subject": {
          "type": "text"
        }
      }
    },
    "aliases": {
      "alerts": {}
    }
  },
  "composed_of": [],
  "priority": 0,
  "name": "alerts_template"
}