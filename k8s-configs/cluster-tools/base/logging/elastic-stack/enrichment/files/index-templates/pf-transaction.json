{
  "index_patterns": [
    "pf-transaction-*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 3,
      "number_of_replicas": 1,
      "index.lifecycle.name": "ping-logstash-policy",
      "index.lifecycle.rollover_alias": "pf-transaction"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "@version": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "timestamp": {
          "type": "text"
        }
      }
    },
    "aliases": {
      "pf-transaction": {
        "is_write_index": true
      }
    }
  }
}
